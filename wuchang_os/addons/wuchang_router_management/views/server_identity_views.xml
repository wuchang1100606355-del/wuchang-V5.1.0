<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_server_identity_tree" model="ir.ui.view">
        <field name="name">server.identity.tree</field>
        <field name="model">server.identity</field>
        <field name="arch" type="xml">
            <tree string="伺服器身份">
                <field name="name"/>
                <field name="identity_type"/>
                <field name="ip_address"/>
                <field name="mac_address"/>
                <field name="is_primary"/>
                <field name="device_id"/>
            </tree>
        </field>
    </record>

    <record id="view_server_identity_form" model="ir.ui.view">
        <field name="name">server.identity.form</field>
        <field name="model">server.identity</field>
        <field name="arch" type="xml">
            <form string="伺服器身份">
                <header>
                    <button name="create_default_identities" string="建立預設身份" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="identity_type"/>
                            <field name="ip_address"/>
                            <field name="mac_address"/>
                        </group>
                        <group>
                            <field name="is_primary"/>
                            <field name="device_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="services" placeholder="服務列表..."/>
                    </group>
                    <group>
                        <field name="cloudflare_tunnel_config" placeholder="Cloudflare Tunnel 配置..."/>
                    </group>
                    <group>
                        <field name="notes" placeholder="備註資訊..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_server_identity" model="ir.actions.act_window">
        <field name="name">伺服器身份</field>
        <field name="res_model">server.identity</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                建立伺服器身份記錄
            </p>
            <p>
                管理伺服器的雙網卡身份（有線/WiFi）
            </p>
        </field>
    </record>
</odoo>
