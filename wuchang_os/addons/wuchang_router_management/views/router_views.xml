<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_router_tree" model="ir.ui.view">
        <field name="name">router.tree</field>
        <field name="model">router.router</field>
        <field name="arch" type="xml">
            <tree string="路由器">
                <field name="name"/>
                <field name="model"/>
                <field name="internal_ip"/>
                <field name="external_ip"/>
                <field name="status"/>
                <field name="connected_devices_count"/>
                <field name="last_check"/>
            </tree>
        </field>
    </record>

    <record id="view_router_form" model="ir.ui.view">
        <field name="name">router.form</field>
        <field name="model">router.router</field>
        <field name="arch" type="xml">
            <form string="路由器">
                <header>
                    <button name="action_check_status" string="檢查狀態" type="object" class="btn-primary"/>
                    <button name="action_sync_devices" string="同步設備" type="object"/>
                    <button name="action_sync_port_forwarding" string="同步端口轉發" type="object"/>
                    <field name="status" widget="statusbar" statusbar_visible="online,offline,unknown"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="model"/>
                            <field name="internal_ip"/>
                            <field name="external_ip"/>
                            <field name="ddns_hostname"/>
                            <field name="port"/>
                        </group>
                        <group>
                            <field name="username"/>
                            <field name="password"/>
                            <field name="last_check"/>
                            <field name="connected_devices_count"/>
                            <field name="firmware_version"/>
                            <field name="uptime"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="連接設備">
                            <field name="device_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="ip_address"/>
                                    <field name="mac_address"/>
                                    <field name="device_type"/>
                                    <field name="is_server"/>
                                    <field name="server_identity"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                        <page string="端口轉發規則">
                            <field name="port_forwarding_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="external_port"/>
                                    <field name="internal_ip"/>
                                    <field name="internal_port"/>
                                    <field name="protocol"/>
                                    <field name="enabled"/>
                                </tree>
                            </field>
                        </page>
                        <page string="系統資訊">
                            <group>
                                <group>
                                    <field name="cpu_usage"/>
                                    <field name="memory_usage"/>
                                </group>
                                <group>
                                    <field name="wan_ip"/>
                                    <field name="wan_status"/>
                                </group>
                            </group>
                        </page>
                        <page string="備註">
                            <field name="notes" placeholder="備註資訊..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_router_router" model="ir.actions.act_window">
        <field name="name">路由器</field>
        <field name="res_model">router.router</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                建立路由器記錄
            </p>
            <p>
                管理路由器資產、連接設備和網路配置
            </p>
        </field>
    </record>
</odoo>
